<h1>ユーザー編集画面</h1>
<%= form_with url: user_path, model:@user, local: true do |f| %>
<% if @user.errors.any? %>
  <div id="error_explantion">
    <div class="alert-position">
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
    </div>
  </div>
<% end %>
  <div class="field">
    <%= f.label :ニックネーム %><br />
    <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname", class: "user-edit" %>
  </div>
  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "user-edit" %>
  </div>
  <div class="actions field">
    <%= f.submit "　編集内容を保存する　", class:"user-edit" %>
  </div>
<% end %>

<%= link_to 'パスワードを変更する', edit_user_registration_path, class:"password-edit" %><br>
<%= link_to "退会する場合はこちらをクリック", users_unsubscribe_path, class:"unsubscribe" %>



