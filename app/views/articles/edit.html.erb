<h1>記事編集画面</h1>

<%= form_with model:@article, local:true do |f| %>
  <div class="field">
    <%= f.label :タイトル %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :説明欄 %><br />
    <%= f.text_area :explanation %>
  </div>

  <div class="field">
    <%= f.label :ジャンル %><br />
    <%= f.text_field :genre %>
  </div>

  <div class="field">
    <%= f.label :参考URL %><br />
    <%= f.text_field :reference_url %>
  </div>

  <div class="actions">
    <%= f.submit "内容を変更する" %>
  </div>
<% end %>