<h1>記事投稿</h1>

<%= form_with model:@article, method: :post, local:true do |f| %>
  <div class="field">
    <%= f.label :タイトル %><br />
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :説明欄 %><br />
    <%= f.text_area :explanation %>
  </div>

  <div class="field">
    <%= f.label :ジャンル %><br />
    <%= f.text_field :genre %>
  </div>

  <div class="field">
    <%= f.label :参考URL %><br />
    <%= f.text_field :reference_url %>
  </div>

  <%= f.hidden_field :task_id, :value => @task.id %>

  <div class="actions">
    <%= f.submit "記事作成" %>
  </div>
<% end %>
