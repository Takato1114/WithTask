<h2>記事詳細</h2>

<% unless @article.tags.blank? %>
  <ul>
    <% @article.tags.each do |tag| %>
      <li>
        <%= link_to tag.tag_name, articles_path(tag_id:tag.id) %>
      </li>
    <% end %>
  </ul>
<% end %>

<table class ="table">
  <tr>
    <td>タイトル</td>
    <td><%= @article.title %></td>
  </tr>
  <tr>
    <td>説明欄</td>
    <td><%= @article.explanation %></td>
  </tr>
  <tr>
    <td>タグ</td>
    <td><% @article_tags.each do |tag| %>
          <p>#<%= tag.tag_name %></p>
        <% end %>
    </td>
  </tr>
  <tr>
    <td>参考URL</td>
    <td><%= @article.reference_url %></td>
  </tr>
  <tr>
    <td>いいね数</td>
    <!--非同期通信-->
    <td id ="favorite-btn_<%= @article.id %>">
			<%= render partial: 'favorites/favorite-btn', locals: { article: @article} %>
		</td>
  </tr>
  <tr>
    <td>コメント数</td>
    <td><%= @article.article_comments.count %>件</td>
  </tr>
</table>
<div class ="comment">
	<%= render partial: 'article_comments/comment', locals: { article: @article, article_comment: @article_comment} %>
</div>
    <%= form_with model:[@article,@article_comment] do |f| %>
      <%= f.text_area :comment, size:"90x5" %>
      <%= f.submit '送信'%>
    <% end %>


<%= link_to '記事編集へ', edit_article_path(@article.id), class:"btn btn-primary" %>
<%= link_to '記事を削除する', article_path(@article.id),method: :delete, data: { confirm: "本当に削除してもよろしいですか。（復元はできません。）" }, class:"btn btn-primary" %>
