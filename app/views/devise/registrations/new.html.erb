<h1>ユーザー新規登録</h1>

<%= link_to 'ゲストログイン（閲覧用）はこちらから', users_guest_sign_in_path, method: :post, class: "guest" %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <% if @user.errors.any? %>
      <div id="error_explantion">
        <div class="alert-position">
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
        </div>
      </div>
    <% end %>

  <div class="field">
    <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname", placeholder: "ニックネームを入力", class: "registration-btn" %>
  </div>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレスを入力", class: "registration-btn"  %>
  </div>

  <div class="field">
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上で入力してください)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワードを入力", class: "registration-btn"  %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワードを入力", class: "registration-btn"  %>
  </div>

  <div class="actions field">
    <%= f.submit "新規登録", class: "registration-btn" %>
  </div>
<% end %>

<%= link_to 'ログイン画面へ',new_user_session_path, class:"login" %>
