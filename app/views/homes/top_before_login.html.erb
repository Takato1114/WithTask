      <div class="btn-position">
        <%= link_to '　 新規登録 　',new_user_registration_path, class:"signup-btn-stitch" %>
      </div>
    </div>
    <div class="col-lg-4">
      <div class="btn-position">
        <%= link_to ' 　ログイン　 ',new_user_session_path, class:"login-btn-stitch" %>
      </div>
    </div>
    <div class="col-lg-4">
      <div class="btn-position">
        <%= link_to 'ゲストログイン', users_guest_sign_in_path, {method: :post ,class:"guest-btn-stitch"} %>
      </div>
    </div>
  </div>
